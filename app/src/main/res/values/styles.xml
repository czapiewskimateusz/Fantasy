<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    
    <style name="MyActionBar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="FullScreenTheme" parent="android:Theme.Material.Light.NoActionBar">

    </style>

    <style name="MyEditText" parent="android:Widget.Material.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:fontFamily">Lato</item>
    </style>

    <style name="MyTextView" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">Lato</item>
    </style>



</resources>
