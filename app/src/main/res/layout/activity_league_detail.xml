<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateusz.fantasy.leagues.view.LeagueDetailActivity">

    <ProgressBar
        android:id="@+id/pB_league_detail"
        style="@android:style/Widget.DeviceDefault.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="128dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_league_detail" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_league_detail"
        style="@style/CardViewDetailStyle"
        android:layout_width="0dp"
        android:layout_height="170dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_number_of_users_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/number_of_players"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_code_detail_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_code_detail_desc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_code_detail_desc"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_ranking_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                app:layout_constraintHorizontal_bias="0.538"
                app:layout_constraintLeft_toLeftOf="@+id/tv_ranking_desc"
                app:layout_constraintRight_toRightOf="@+id/tv_ranking_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_ranking_desc"
                tools:text="1512" />

            <ImageView
                android:id="@+id/iv_league_logo_detail"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cup"
                android:transitionName="tran_cup"/>

            <TextView
                android:id="@+id/tv_league_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner"
                android:fontFamily="LATO"
                android:padding="6dp"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_league_logo_detail"
                tools:text="Liga Niezwykłych Gentelmanów"
                android:transitionName="tran_league_name"/>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <TextView
                android:id="@+id/tv_ranking_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:text="@string/position"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_code_detail_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_code_detail_desc"
                app:layout_constraintTop_toTopOf="@+id/tv_code_detail_desc"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_code_detail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/league_code"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_league_name_detail"
                app:layout_constraintRight_toRightOf="@+id/tv_league_name_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_league_name_detail" />

            <TextView
                android:id="@+id/tv_code_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"
                app:layout_constraintLeft_toLeftOf="@+id/tv_code_detail_desc"
                app:layout_constraintRight_toRightOf="@+id/tv_code_detail_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_code_detail_desc"
                tools:text="728162" />

            <TextView
                android:id="@+id/tv_number_of_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"
                app:layout_constraintLeft_toLeftOf="@+id/tv_number_of_users_desc"
                app:layout_constraintRight_toRightOf="@+id/tv_number_of_users_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_of_users_desc"
                tools:text="3500000" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_league_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_league_detail" />


</android.support.constraint.ConstraintLayout>
