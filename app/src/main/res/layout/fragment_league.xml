<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/league_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mateusz.fantasy.home.view.fragment.LeagueFragment">


        <ProgressBar
            android:id="@+id/pB_league_fragment"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/rv_leagues"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_leagues"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible" />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fab_leagues_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu_colorNormal="@color/accent"
            app:menu_colorPressed="@color/accent"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            fab:menu_backgroundColor="#ccffffff"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true"
            android:layout_marginBottom="48dp"
            app:layout_anchor="@id/rv_leagues"
            app:layout_anchorGravity="bottom|right|end">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_create_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_48px"
                fab:fab_label="@string/create"
                fab:fab_size="mini"
                style="@style/MenuButtonsSmall.Green"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_join_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_48px"
                fab:fab_label="@string/join"
                fab:fab_size="mini"
                style="@style/MenuButtonsSmall.Green"/>


        </com.github.clans.fab.FloatingActionMenu>

    </android.support.design.widget.CoordinatorLayout>



</FrameLayout>


