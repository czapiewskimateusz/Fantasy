<android.support.design.widget.CoordinatorLayout

    android:id="@+id/leagues_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.mateusz.fantasy.home.view.fragment.LeagueFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto">


    <ProgressBar
        style="@android:style/Widget.DeviceDefault.ProgressBar"
        android:id="@+id/pB_league_fragment"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_leagues" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_leagues"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:visibility="invisible" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_leagues_menu"
        android:layout_height="match_parent"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        app:layout_anchor="@id/rv_leagues"
        app:layout_anchorGravity="bottom|right|end"
        app:menu_colorNormal="@color/accent"
        app:menu_colorPressed="@color/accent_dark"
        app:menu_fab_hide_animation="@anim/fab_slide_out_to_right"
        app:menu_fab_show_animation="@anim/fab_slide_in_from_right"
        app:layout_behavior="com.example.mateusz.fantasy.utils.FloatingActionMenuBehavior">

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmall.Green"
            android:id="@+id/fab_create_league"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_48px"
            fab:fab_label="@string/create"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmall.Green"
            android:id="@+id/fab_join_league"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_48px"
            fab:fab_label="@string/join"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>






