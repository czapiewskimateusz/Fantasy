<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/league_rank_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_trans_primary_dark"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tv_user_rank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="152125" />

    <TextView
        android:id="@+id/tv_users_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_user_rank"
        android:textAlignment="textStart"
        android:textColor="@color/accent"
        android:textStyle="bold"
        tools:text="AC Pajace" />

    <TextView
        android:id="@+id/tv_home_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_users_team_name"
        android:layout_below="@+id/tv_users_team_name"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        tools:text="Mateusz Czapiewski" />

    <TextView
        android:id="@+id/tv_total_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_position_gk"
        tools:text="1291" />



</RelativeLayout>